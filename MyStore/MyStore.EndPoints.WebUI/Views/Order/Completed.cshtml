@model MyStore.Core.Domain.Orders.Order

@{
    ViewData["Title"] = "Completed";
}

<h1>Order Completed</h1>

<table>
    <tr>
        <td>OrderId</td>
        <td>@Model.OrderId</td>        
    </tr>
    <tr>
        <td>Price</td>
        <td>@Model.Lines.Sum(c=>c.Product.Price * c.Quantity)</td>        
    </tr>
</table>

<form asp-action="RequestPayment" asp-controller="Payment" method="post" >
    <input type="hidden" value="@Model.OrderId" name="orderId" />
    <input type="submit" value="Complete" />
</form>

